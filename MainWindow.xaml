<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" ResizeMode="NoResize">
   
    <Grid Background="#FFFDFAF1">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>

        
        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource HeaderStyle}" Name="MainText">Список дел</TextBlock>
        </StackPanel>

        <ListBox HorizontalContentAlignment="Stretch" Grid.Row="1" Name="listToDo"  Background="#FFFFFAD6" Margin="10,5,10,5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch" Style="{StaticResource GridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.5*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                            <CheckBox Checked="CheckItem" Unchecked="UncheckItem"></CheckBox>
                            <TextBlock Text="{Binding Path=GetName}" Margin="5 0 0 0 " HorizontalAlignment="Stretch"> </TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=GetDateImpl, StringFormat='Дата: {0:dd.MM.yyyy}'}"></TextBlock>
                            <Button Click="KillItem" Height="20" Width="20">
                                <Image  Source="delete.png"></Image>
                            </Button>
                        </StackPanel>
                        <ScrollViewer MaxHeight="60" Grid.Row="1">
                            <TextBlock  Text="{Binding Path=GetDescription}" FontSize="10"></TextBlock>
                        </ScrollViewer>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
        
        <StackPanel Grid.Row="0"  VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Height="25" Width="30" Margin="5" Style="{StaticResource ButtonStyle}" Name="buttonAdd" Click="AddItem" Background="#5EBEC4" ToolTip="При добавлении дело появится в списке слева, и его придется выполнить">
                <Image Source="add.png"></Image>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <ProgressBar Name="ProgressBar" Margin="5" Height="25" Maximum="100" Minimum="0" Foreground="#5EBEC4" Background="#FDF5DF"></ProgressBar>
        </StackPanel>
        <TextBlock Name="TextProgressBar" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
    </Grid>
    
</Window>

